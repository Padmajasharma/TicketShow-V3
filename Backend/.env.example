# Example .env for Flask Backend

# Flask secret key (generate with: python3 -c "import secrets; print(secrets.token_urlsafe(48))")
SECRET_KEY=your_generated_secret_key_here

# Postgres (local example)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ticketshow
# Postgres (Render example)
# DATABASE_URL=postgresql://<username>:<password>@<host>:<port>/<dbname>

# Redis (local example)
REDIS_URL=redis://localhost:6379/0
# Redis (Redis Cloud example)
# REDIS_URL=redis://default:<password>@<host>:<port>

# Mailtrap SMTP (get from mailtrap.io)
MAIL_SERVER=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username
MAIL_PASSWORD=your_mailtrap_password
MAIL_USE_TLS=True
MAIL_USE_SSL=False

# Other config
FRONTEND_URL=https://your-frontend-url.vercel.app
